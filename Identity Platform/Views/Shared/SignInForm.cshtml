@model Login

<form method="post" asp-controller="Authorization" asp-action="Login">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" placeholder="Username"/>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" placeholder="Password"/>
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>

    <div class="dropdown-divider"></div>

    <a class="dropdown-item" asp-controller="Authorization" asp-action="SignUp">New around here? Sign up!</a>
</form>